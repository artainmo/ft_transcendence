version: '3'
services:

  db:
    container_name: postgres
    image: postgres:14.1-alpine
    ports:
      - '5432:5432'
    env_file:
      - ./db/.env
    volumes:
      - db:/var/lib/postgresql/data
      - ./db/init.sql:/docker-entrypoint-initdb.d/create_table
    restart: always

  frontend:
    container_name: frontend
    build:
      context: ./frontend
      dockerfile: Dockerfile
    image: frontend
    restart: always
    volumes:
      - /app/node_modules
      - ./frontend:/app
    hostname: frontend
    environment:
      PORT: 3000
      PROXY_API: http://frontend:8080/
    ports:
      - '3000:3000'

  backend:
    container_name: backend
    build:
      context: ./backend
      dockerfile: Dockerfile
    image: backend
    restart: always
    hostname: backend
    environment:
      PORT: 3001
      PROXY_API: http://backend:8080/
    ports:
      - '3001:3001'
    links:
      - db
    depends_on:
      - db

volumes:
  db:
